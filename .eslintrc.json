{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": { "multiline": false }
      }
    ],
    "quotes": 0,
    "no-multiple-empty-lines": 1,
    "no-multi-spaces": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-extra-parens": 1,
    "no-trailing-spaces": 1,
    "no-unused-vars": 1,
    "consistent-return": 1,
    "linebreak-style": 1,
    "prettier/prettier": [0, { "endOfLine": "auto" }],
    "no-param-reassign": ["error", { "props": false }],
    "import/extensions": [
      2,
      "ignorePackages",
      {
        "js": "always"
      }
    ]
  },
  "plugins": ["prettier"]
}
